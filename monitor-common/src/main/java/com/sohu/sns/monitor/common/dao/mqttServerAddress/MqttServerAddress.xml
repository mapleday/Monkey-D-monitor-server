<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sohu.sns.monitor.common.dao.mqttServerAddress.MqttServerAddressDao">
    <cache flushInterval="300"/>

    <select id="getMqtt" resultType="com.sohu.sns.monitor.common.module.MqttServerAddress">
        SELECT
            id as id,
            server_address AS serverAddress,
            monitor_num AS  monitorNum,
            stat as stat
        FROM
            t_monitor_mqtt as t
        WHERE
            t.stat = 1
    </select>

    <update id="updateMqtt" parameterType="com.sohu.sns.monitor.common.module.MqttServerAddress">
        UPDATE t_monitor_mqtt SET
        id=#{id},server_address=#{serverAddress},monitor_num=#{monitorNum},stat=#{stat}
        WHERE id=#{id}
    </update>

    <delete id="deleteMqtt" parameterType="com.sohu.sns.monitor.common.module.MqttServerAddress">
        DELETE FROM  t_monitor_mqtt WHERE  id=#{id}
    </delete>

    <insert id="createMqtt" parameterType="com.sohu.sns.monitor.common.module.MqttServerAddress">
        INSERT  INTO t_monitor_mqtt(id,server_address,monitor_num,stat) VALUES (#{id},#{serverAddress},#{monitorNum},#{stat})
    </insert>
</mapper>