<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sohu.sns.monitor.common.dao.notifyPerson.NotifyPersonDao">
    <cache flushInterval="300"/>

    <select id="getDutyPerson" resultType="com.sohu.sns.monitor.common.module.NotifyPerson" useCache="true">
        SELECT
        id, name, email, phone, `status`,`group`,duty_status as waitDutyStatus
        FROM
        t_notify_person
        WHERE duty_status!=0
    </select>


    <select id="getAllPerson" resultType="com.sohu.sns.monitor.common.module.NotifyPerson" useCache="true">
        SELECT
              id, name, email, phone, `status`,`group`,duty_status as waitDutyStatus
        FROM
              t_notify_person
    </select>


    <update id="updatePerson" parameterType="com.sohu.sns.monitor.common.module.NotifyPerson">
        UPDATE t_notify_person
        <set>
            <if test="id != null"> id = #{id}, </if>
            <if test="name != null"> name = #{name}, </if>
            <if test="email != null"> email = #{email}, </if>
            <if test="phone != null"> phone = #{phone}, </if>
            <if test="status != null"> status = #{status}, </if>
            <if test="group!=null">`group`=#{group},</if>
            <if test="waitDutyStatus!=null">duty_status=#{waitDutyStatus}</if>
        </set>
        WHERE id = #{id}
    </update>

    <insert id="createPerson" parameterType="com.sohu.sns.monitor.common.module.NotifyPerson" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO t_notify_person
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id!=null">id,</if>
            <if test="name != null"> name, </if>
            <if test="email != null"> email, </if>
            <if test="phone != null"> phone, </if>
            <if test="status != null"> status,</if>
            <if test="group!=null">`group`,</if>
            <if test="waitDutyStatus!=null">duty_status</if>
        </trim>
        VALUES
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id!=null">#{id},</if>
            <if test="name != null"> #{name}, </if>
            <if test="email != null"> #{email}, </if>
            <if test="phone != null">  #{phone}, </if>
            <if test="status != null">  #{status}, </if>
            <if test="group!=null">#{group},</if>
            <if test="waitDutyStatus!=null">#{waitDutyStatus}</if>
        </trim>
    </insert>

    <delete id="deletePerson" parameterType="com.sohu.sns.monitor.common.module.NotifyPerson">
        DELETE FROM t_notify_person WHERE id=#{id}
    </delete>

</mapper>