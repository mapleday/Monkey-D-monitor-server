<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sohu.sns.monitor.common.dao.notifyPerson.NotifyPersonDao">
    <cache flushInterval="300"/>

    <select id="getAllPerson" resultType="com.sohu.sns.monitor.common.module.NotifyPerson" useCache="true">
        SELECT
              id, name, email, phone, `status`
        FROM
              t_notify_person
    </select>

    <update id="updatePerson" parameterType="com.sohu.sns.monitor.common.module.NotifyPerson">
        UPDATE t_notify_person SET id=#{id},name=#{name},email=#{email},phone=#{phone},status=#{status}
        WHERE id=#{id}
    </update>

    <delete id="deletePerson" parameterType="com.sohu.sns.monitor.common.module.NotifyPerson">
        DELETE FROM t_notify_person WHERE id=#{id}
    </delete>

    <insert id="createPerson" parameterType="com.sohu.sns.monitor.common.module.NotifyPerson">
        INSERT INTO t_notify_person(id,name,email,phone,status)VALUES (#{id},#{name},#{email},#{phone},#{status});
    </insert>
</mapper>