<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="mpReadJdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" ref="mpReadDataSource"/>
    </bean>

    <bean id="mpWriteJdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" ref="mpWriteDataSource"/>
    </bean>

    <bean id="mpReadDataSource" class="com.alibaba.druid.pool.DruidDataSource" destroy-method="close">
    </bean>

    <bean id="mpWriteDataSource" class="com.alibaba.druid.pool.DruidDataSource" destroy-method="close">
    </bean>
</beans>