<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sohu.sns.monitor.common.dao.snsWebUser.SnsWebUserDao">
    <select id="getUser" parameterType="String"  resultType="com.sohu.sns.monitor.common.module.SnsWebUser">
        SELECT id as id,
            name as name,
            login_name as loginName,
            password as password,
            email as email,
            role as role
        FROM sns_web_user
        WHERE login_name=#{loginName}
    </select>

    <insert id="createUser" parameterType="com.sohu.sns.monitor.common.module.SnsWebUser">
        INSERT INTO sns_web_user
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id!=null">id,</if>
            <if test="loginName!=null">login_name,</if>
            <if test="password!=null">password,</if>
            <if test="email!=null">email,</if>
            <if test="role!=null">role</if>
        </trim>
        VALUES
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id!=null">#{id},</if>
            <if test="loginName!=null">#{loginName},</if>
            <if test="password!=null">#{password},</if>
            <if test="email!=null">#{email},</if>
            <if test="roleId!=null">#{role}</if>
        </trim>
    </insert>

    <select id="getRole" parameterType="String" resultType="String">
        SELECT role
          FROM sns_web_user
        WHERE login_name=#{loginName}
    </select>
</mapper>